  15: "F",
}}


toHex = (x) => pipe(
  Math.floor,
  List.range(0),
  List.reduce(
    (agg, j) => if (Math.floor(agg.value) > 0) do {
      i = Integer.fromFloat(agg.value)
      rem = Math.mod(i, 16)
      value = agg.value / 16
      return { stack: [rem, ...agg.stack], value }
    } else {
      agg
    },
    { stack: [], value: x },
  ),
  .stack,
  map(
    pipe(
      Dict.get($, hex),
      fromMaybe("0"),
    ),
  ),
  String.join(""),
)(x / 16)


